{
  "name": "snippetshot",
  "displayName": "SnippetShot",
  "description": "Create beautiful code screenshots right inside VS Code.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bridgetamana/SnippetShot-.git"
  },
  "publisher": "pnp",
  "keywords": [
    "snippetshot",
    "screenshot",
    "code screenshot",
    "snippet",
    "share",
    "png",
    "svg",
    "code snippet",
    "code snap"
  ],
  "galleryBanner": {
    "color": "#fbfbfb",
    "theme": "light"
  },
  "icon": "icon.png",
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onWebviewPanel:snippetshot"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "vscode:prepublish": "npm run compile",
    "lint": "echo 'add linter later'"
  },
  "contributes": {
    "commands": [
      {
        "command": "snippetshot.activate",
        "title": "SnippetShot ðŸ“¸"
      }
    ],
    "configuration": {
      "title": "SnippetShot",
      "properties": {
        "snippetshot.shadow": {
          "type": "string",
          "description": "Shadow of the snippet node. Use any value for CSS `box-shadow`",
          "default": "rgba(0, 0, 0, 0.55) 0px 20px 68px"
        },
        "snippetshot.transparentBackground": {
          "type": "boolean",
          "description": "Transparent background for containers",
          "default": false
        },
        "snippetshot.backgroundColor": {
          "type": "string",
          "description": "Background color of snippet container. Use any value for CSS `background-color`",
          "format": "color-hex",
          "default": "#f2f2f2"
        },
        "snippetshot.target": {
          "type": "string",
          "description": "Shoot with or without container",
          "default": "container",
          "enum": [
            "container",
            "snippet"
          ],
          "enumDescriptions": [
            "Shoot with the container.",
            "Shoot with the snippet alone. If you want transparent padding, use `container` with `\"snippetshot.transparentBackground\": true`"
          ]
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.90.0",
    "typescript": "^5.4.0"
  }
}
