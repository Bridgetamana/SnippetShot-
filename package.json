{
  "name": "snippetshot",
  "displayName": "SnippetShot",
  "description": "Create beautiful code screenshots right inside VS Code.",
  "version": "0.0.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bridgetamana/SnippetShot-.git"
  },
  "license": "MIT",
  "publisher": "Bridget Amana",
  "keywords": [
    "snippetshot",
    "screenshot",
    "code screenshot",
    "snippet",
    "share",
    "png",
    "svg",
    "code snippet",
    "code snap"
  ],
  "galleryBanner": {
    "color": "#fbfbfb",
    "theme": "light"
  },
  "icon": "assets/icon.png",
  "categories": [
    "Other"
  ],
  "engines": {
    "vscode": "^1.90.0"
  },
  "activationEvents": [
    "onWebviewPanel:snippetshot"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "vscode:prepublish": "npm run compile",
    "lint": "eslint src/**/*.ts webview/**/*.js",
    "lint:fix": "eslint src/**/*.ts webview/**/*.js --fix",
    "format": "prettier --write \"src/**/*.ts\" \"webview/**/*.js\" \"webview/**/*.html\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"webview/**/*.js\" \"webview/**/*.html\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "webview/**/*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "webview/**/*.html": [
      "prettier --write"
    ]
  },
  "contributes": {
    "commands": [
      {
        "command": "snippetshot.activate",
        "title": "SnippetShot ðŸ“¸"
      }
    ],
    "configuration": {
      "title": "SnippetShot",
      "properties": {
        "snippetshot.shadow": {
          "type": "string",
          "description": "Shadow of the snippet node. Use any value for CSS `box-shadow`",
          "default": "rgba(0, 0, 0, 0.55) 0px 20px 68px"
        },
        "snippetshot.backgroundColor": {
          "type": "string",
          "description": "Background color of snippet container. Use any value for CSS `background-color`",
          "format": "color-hex",
          "default": "#f2f2f2"
        },
        "snippetshot.target": {
          "type": "null",
          "description": "Deprecated: always captures container",
          "default": null
        },
        "snippetshot.theme": {
          "type": "null",
          "description": "Deprecated: theme selector removed",
          "default": null
        }
      }
    }
  },
  "devDependencies": {
    "@types/dom-to-image": "^2.6.7",
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.90.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "typescript": "^5.4.0"
  }
}
