{
  "title": "SnippetShot",
  "description": "Advanced code screenshot customization settings",
  "type": "object",
  "properties": {
    "snippetshot.exportFormat": {
      "type": "string",
      "enum": ["png", "svg", "jpeg", "webp"],
      "default": "png",
      "description": "Default export format for screenshots"
    },
    "snippetshot.exportQuality": {
      "type": "number",
      "minimum": 0.1,
      "maximum": 1.0,
      "default": 0.9,
      "description": "Export quality (for JPEG/WebP formats)"
    },
    "snippetshot.maxWidth": {
      "type": "number",
      "default": 1200,
      "description": "Maximum width for exported images (0 = no limit)"
    },
    "snippetshot.padding": {
      "type": "number",
      "default": 24,
      "description": "Padding around the code snippet (in pixels)"
    },
    "snippetshot.showWindowControls": {
      "type": "boolean",
      "default": false,
      "description": "Show fake window controls (minimize, maximize, close buttons)"
    },
    "snippetshot.windowTheme": {
      "type": "string",
      "enum": ["auto", "light", "dark"],
      "default": "auto",
      "description": "Window controls theme"
    },
    "snippetshot.syntaxTheme": {
      "type": "string",
      "default": "vs-dark",
      "description": "Syntax highlighting theme to apply"
    },
    "snippetshot.fontSize": {
      "type": "number",
      "default": 13,
      "description": "Font size for code (in pixels)"
    },
    "snippetshot.lineHeight": {
      "type": "number",
      "default": 1.5,
      "description": "Line height multiplier"
    },
    "snippetshot.showWatermark": {
      "type": "boolean",
      "default": false,
      "description": "Show watermark on exported images"
    },
    "snippetshot.watermarkText": {
      "type": "string",
      "default": "SnippetShot",
      "description": "Custom watermark text"
    },
    "snippetshot.autoSave": {
      "type": "boolean",
      "default": true,
      "description": "Automatically save screenshots without prompting"
    },
    "snippetshot.copyToClipboard": {
      "type": "boolean",
      "default": false,
      "description": "Copy screenshot to clipboard after saving"
    }
  }
}
